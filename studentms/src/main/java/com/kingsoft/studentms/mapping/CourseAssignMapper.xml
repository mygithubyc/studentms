<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kingsoft.studentms.dao.ICourseAssignDao">
	<resultMap type="com.kingsoft.studentms.model.CourseAssign" id="courseAssign">
		<result column="COURSE_ASSIGN_ID" property="courseAssignId" jdbcType="INTEGER"/>
		<result column="DEPART_ID" property="departId" jdbcType="INTEGER"/>
		<result column="COURSE_ID" property="departId" jdbcType="INTEGER"/>
		<result column="ASSIGN_STATUS" property="assignStatus" jdbcType="VARCHAR"/>
		<result column="TERM" property="term" jdbcType="VARCHAR"/>
	</resultMap>
	<insert id= "addCourseAssign">
		insert into COURSE_ASSIGN(depart_id,course_id,assign_status,term) VALUES(#{departId},#{courseId},1,#{term})
	</insert>
	<delete id="deleteCourseByDepary">
		DELETE from COURSE_ASSIGN where DEPART_ID = #{id,jdbcType=VARCHAR}
	</delete>
</mapper>